!!!
%html{ lang: 'en', prefix: 'og: http://ogp.me/ns#' }
  %head
    %meta{ charset: 'utf-8' }/
    %meta{ 'http-equiv': 'X-UA-Compatible', content: 'IE=edge' }/
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1' }/
    %meta{ name: 'description', content: 'Hot Mess is you\'re link to local gay nightlife' }/
    %meta{ nane: 'author', content: 'Hot Mess and Company' }/
    %meta{ name: 'fb-app', content: Rails.application.secrets.facebook['app_id'] }/
    %meta{ property: 'og:type', content: 'websites' }/
    %meta{ property: 'og:image', content: 'https://hotmess.social/image.png' }/
    %meta{ property: 'og:locale', content: 'en_US' }/
    %meta{ property: 'og:description', content: "Hot Mess is your mobile link to the local gay nightlife.  Whether in your home town or while you're traveling, the details are here." }/
    %title Hot Mess - Gay Nightlife

    :javascript
      (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
      new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
      j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
      'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
      })(window,document,'script','dataLayer','GTM-5Q4GW8N');

    = stylesheet_link_tag 'cover'

    = javascript_include_tag 'application'
    = javascript_include_tag '//connect.facebook.net/en_US/sdk.js'

    / HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    /[if lt IE 9]
      %script( src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js' type='text/javascript' )
      %script( src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js' type='text/javascript' )
  %body
    %noscript
      %iframe( src="https://www.googletagmanager.com/ns.html?id=GTM-5Q4GW8N" height="0" width="0" style="display:none;visibility:hidden" )

    .site-wrapper
      .site-wrapper-inner
        .cover-container
          .masthead.clearfix
            .inner
              %h3.masthead-brand Hot Mess
              %ul.nav.masthead-nav
                %li{ class: (params[:action] == 'index' || params[:action] == 'beta' ? 'active' : '')}
                  = link_to 'Home', root_path
                %li{ class: (params[:action] == 'about' ? 'active' : '')}
                  = link_to 'About', controller: :home, action: :about
                %li{ class: (params[:action] == 'contact' ? 'active' : '')}
                  = link_to 'Contact', controller: :home, action: :contact
          .inner.cover
            = yield
          .mastfoot
          .inner
            %p
              = succeed "," do
                = "Copyright &copy; #{DateTime.now.year} - Hot Mess Productions".html_safe
              = succeed "." do
                %a{ href: "/privacy" } Privacy Policy
    #fb-root