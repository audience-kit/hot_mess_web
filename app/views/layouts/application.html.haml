!!!
%html{ lang: 'en' }
  %head
    %meta( charset="utf-8"  )
    %meta( http-equiv="X-UA-Compatible" content="IE=edge" )
    %meta( viewport="width=device-width, initial-scale=1" )
    %meta{ name: 'fb-app', value: Rails.application.secrets.facebook['app_id'] }
    %meta{ name: 'apple-itunes-app', content: 'app-id=1195758383'}/
    - if @app_link
      %meta{ property: 'al:ios:url', content: "hotmess://#{@app_link}" }/
    %meta{ property: 'al:ios:app_store_id', content: '1195758383' }/
    %meta{ property: 'al:ios:app_name', content: 'Hot Mess' }/
    %meta{ property: 'og:title', content: @title }/
    %meta{ property: 'og:type', content: 'website' }/
    - if @image
      %meta{ property: 'og:image', content: @image }/
    %meta{ property: 'og:locale', content: 'en_US' }/
    %title Hot Mess - #{@title}
    = stylesheet_link_tag    'application', media: 'all'
    = csrf_meta_tags
    /[if lt IE 9]
      %script( src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js" type="text/javascript" )
      %script( src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js" type="text/javascript" )
  %body( role="document" )

    .container( role="main" )
      .h1 Hot Mess

      - if flash[:notice]
        %p#notice.bg-primary.flash= flash[:notice]
      - if flash[:danger]
        %p#flash_danger.bg-danger.flash= flash[:danger]
      - if flash[:success]
        %p#flash_success.bg-success.flash= flash[:success]
      - if flash[:warning]
        %p#flash_warning.bg-warning.flash= flash[:warning]

      = yield

      = link_to 'https://itunes.apple.com/us/app/hot-mess-gay-nightlife/id1195758383?ls=1&mt=8' do
        = image_tag 'en_app_store.svg', size: '180x60'

    #body_script_tags
      = javascript_include_tag 'application'
    #fb-root