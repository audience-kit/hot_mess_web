%nav.navbar.navbar-default.navbar-fixed-top( role="navigation" )
  .container
    .navbar-header
      %button.navbar-toggle.collapsed( data-toggle="collapse" data-target="#navbar-collapse" )
        %span.sr-only Toggle navigation
        %span.icon-bar
      %a.navbar-brand{ :href => dashboard_path } Hot Mess Seattle
    .collapse.navbar-collapse#navbar-collapse
      %ul.nav.navbar-nav
        %li{ :class => ('active' if params[:controller] == 'home' && params[:action] == 'dashboard') }
          %a{ :href => dashboard_path } Home
        %li{ :class => ('active' if params[:controller] == 'events') }
          %a{ :href => events_path } Events
        %li{ :class => ('active' if params[:controller] == 'venues') }
          %a{ :href => venues_path } Venues
        %li{ :class => ('active' if params[:controller] == 'people') }
          %a{ href: people_path } People
      %ul.nav.navbar-nav.navbar-right
        - if session[:user_id].nil?
          %li
            %a.facebook_login( href = "#" )
              Login
        - else
          %li
            %a.user_name{ href: me_path }= session[:name]
          %li
            %button.facebook_logout.btn.btn-default.navbar-btn
              Logout
          - if is_admin?
            %li.dropdown
              %a.dropdown-toggle{ href: '#', data: { toggle: 'dropdown' } }
                Admin
                %span.caret
              %ul.dropdown-menu( role="menu" )
                %li
                  = link_to 'Locales', admin_locales_path