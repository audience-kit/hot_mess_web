
= form_for [:admin, @venue] do |form|
  - if @venue.errors.any?
    #error_explanation
      %h2= "#{pluralize(@venue.errors.count, "error")} prohibited this venue from being saved:"
      %ul
        - @venue.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = form.label :name
    = form.text_field :name, class: 'form-control'

  .form-group
    = form.label :about
    = form.text_field :about, class: 'form-control'

  .form-group
    = form.label :description
    = form.text_area :description, class: 'form-control', rows: 10

  .form-group
    = form.label :phone
    = form.text_field :phone, class: 'form-control'
