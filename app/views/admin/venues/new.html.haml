%h1 Create a New Venue

.row
  = form_for :venue_import, url: import_admin_venues_path do |form|

    .panel.panel-default
      .panel-heading Import a Venue
      .panel-body
        %fieldset
          .input-group
            %span.input-group-addon facebook.com/
            %input.form-control#import_venue_page( type="text" placeholder="page" name="import_venue_page" )
      .panel-footer.clearfix
        .pull-left
          = link_to 'Cancel', venues_path, class: 'btn btn-danger'
        .pull-right
          = form.submit 'Import', class: 'btn btn-success'


.row
  .panel.panel-default
    .panel-heading Create a Venue Manually
    .panel-body
      = render partial: 'form'
    .panel-footer.clearfix
      .pull-left
        = link_to 'Cancel', venues_path, class: 'btn btn-danger'
      .pull-right
        = submit_tag 'Create', class: 'btn btn-primary'